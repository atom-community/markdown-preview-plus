{
  "name": "markdown-preview-plus",
  "version": "4.0.1",
  "main": "./loader.js",
  "bundle": "./dist/main.js",
  "client": "./client/main.js",
  "description": "Markdown Preview + Community Features",
  "keywords": [
    "markdown",
    "maths",
    "latex",
    "commonmark",
    "pandoc"
  ],
  "repository": "https://github.com/atom-community/markdown-preview-plus",
  "license": "MIT",
  "engines": {
    "atom": ">=1.48.0 <2.0.0"
  },
  "atomTestRunner": "./node_modules/atom-ts-spec-runner/runner.js",
  "scripts": {
    "build": "npm run build-main && npm run build-client",
    "build-main": "tsc -p src && npm run bundle-main",
    "bundle-main": "parcel build --target bundle lib/main.js --no-scope-hoist",
    "build-client": "tsc -p src-client && npm run bundle-client",
    "bundle-client": "parcel build --target client lib-client/src-client/main.js",
    "prettier": "prettier --write 'src/**/*.ts' 'src-client/**/*.ts' 'spec/**/*.ts'",
    "prettier-check": "prettier -l 'src/**/*.ts' 'src-client/**/*.ts' 'spec/**/*.ts'",
    "typecheck": "tsc --noEmit -p src && tsc --noEmit -p src-client && tsc --noEmit -p spec",
    "lint": "tslint --project src && tslint --project src-client && tslint --project spec",
    "test": "npm run typecheck && npm run lint && npm run prettier-check"
  },
  "atomTranspilers": [
    {
      "transpiler": "atom-ts-transpiler",
      "glob": "{!(node_modules)/**/,}*.ts?(x)",
      "options": {
        "compilerOptions": {
          "target": "es2017",
          "module": "commonjs"
        },
        "cacheKeyFiles": [],
        "verbose": false
      }
    }
  ],
  "targets": {
    "bundle": {
      "context": "electron-renderer",
      "includeNodeModules": {
        "atom": false,
        "electron": false,
        "mathjax": false,
        "twemoji-assets": false,
        "coffee-script": false
      },
      "outputFormat": "commonjs",
      "isLibrary": true,
      "sourceMap": {
        "inlineSources": true
      }
    },
    "client": {
      "context": "electron-renderer",
      "includeNodeModules": {
        "atom": false,
        "electron": false,
        "mathjax": false,
        "twemoji-assets": false
      },
      "outputFormat": "commonjs",
      "isLibrary": true,
      "sourceMap": {
        "inlineSources": true
      }
    }
  },
  "dependencies": {
    "mathjax": "https://github.com/atom-community/MathJax/archive/2.7.4-electron.0.1.0.tar.gz",
    "twemoji-assets": "https://github.com/lierdakil/twemoji-assets/archive/v12.1.2-assets-0.1.0.tar.gz"
  },
  "devDependencies": {
    "@types/atom": "^1.40.4",
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash": "^4.14.157",
    "@types/markdown-it": "10.0.1",
    "@types/mathjax": "0.0.36",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12",
    "@types/sinon-chai": "^3.2.4",
    "@types/temp": "^0.8.34",
    "atom-haskell-tslint-rules": "^0.2.2",
    "atom-select-list": "^0.7.2",
    "atom-ts-spec-runner": "^1.1.1",
    "atom-ts-transpiler": "^1.5.2",
    "chai": "^4.2.0",
    "electron": "^5",
    "file-uri-to-path": "^2.0.0",
    "fs-extra": "^9.0.1",
    "jasmine-tagged": "^1.1.4",
    "lodash": "^4.17.15",
    "markdown-it": "^11.0.0",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-lazy-headers": "^0.1.3",
    "markdown-it-table-of-contents": "^0.4.4",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-testgen": "^0.1.6",
    "morphdom": "^2.6.1",
    "parcel": "^2.0.0-nightly.318",
    "pirates": "^4.0.1",
    "prettier": "^2.0.5",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "temp": "^0.9.1",
    "tslint": "^6.1.2",
    "tslint-use-atom-disposables": "0.0.1",
    "twemoji": "^12.1.5",
    "typescript": "^3.9.5",
    "typescript-tslint-plugin": "0.5.5",
    "yaml": "^1.10.0"
  },
  "deserializers": {
    "markdown-preview-plus/MarkdownPreviewView": "createMarkdownPreviewView"
  }
}
